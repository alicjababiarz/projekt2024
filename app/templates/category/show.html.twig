{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_details'|trans({'%id%': category.id|default('')}) }}</h1>

    {% if category is defined and category|length %}
        <dl class="row">
            <dt class="col-sm-3">{{ 'label.id'|trans }}</dt>
            <dd class="col-sm-9">{{ category.id }}</dd>
            <dt class="col-sm-3">{{ 'label.created_at'|trans }}</dt>
            <dd class="col-sm-9">{{ category.createdAt|format_date('long') }}</dd>
            <dt class="col-sm-3">{{ 'label.updated_at'|trans }}</dt>
            <dd class="col-sm-9">{{ category.updatedAt|format_date('long') }}</dd>
            <dt class="col-sm-3">{{ 'label.title'|trans }}</dt>
            <dd class="col-sm-9">{{ category.title }}</dd>
        </dl>

        <div class="mt-4">
            <a href="{{ url('category_index') }}" class="btn btn-secondary" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
            <a href="{{ url('category_create') }}" class="btn btn-primary" title="{{ 'action.create'|trans }}">
                {{ 'action.create'|trans }}
            </a>
            <a href="{{ url('category_edit', {id: category.id}) }}" class="btn btn-warning" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ url('category_delete', {id: category.id}) }}" class="btn btn-danger" title="{{ 'action.delete'|trans }}">
                    {{ 'action.delete'|trans }}
                </a>
            {% endif %}
        </div>

    {% else %}
        <p>{{ 'message.record_not_found'|trans }}</p>
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.comment_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.comment_list'|trans }}</h1>

    {% if comments is not empty %}
        <table>
            <thead>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <th>{{ 'label.email'|trans }}</th>
                <th>{{ 'label.nick'|trans }}</th>
                <th>{{ 'label.content'|trans }}</th>
                <th>{{ 'label.element_id'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.email }}</td>
                    <td>{{ comment.nick }}</td>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.element.id }}</td>
                    <td>
                        {#
                        <a href="{{ path('comment_show', {elementID: element.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a> #}

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ 'message.empty_list'|trans }}</p>
    {% endif %}

    <p><a href="{{ path('comment_create') }}" title="{{ 'action.create'|trans }}">
            {{ 'action.create'|trans }}</a></p>
{% endblock %}

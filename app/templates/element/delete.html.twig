{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ page_title }}</h1>

    <p>{{ 'message.confirm_delete'|trans }}</p>

    {{ form_start(form) }}
    <div class="form-group">
        <input type="submit" value="{{ submit_label }}" class="btn btn-danger"/>
    </div>
    {{ form_end(form) }}

    <p><a href="{{ path(back_to_list_path) }}" class="btn btn-secondary">
            {{ 'action.back_to_list'|trans }}
        </a></p>
{% endblock %}

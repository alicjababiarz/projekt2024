{% extends 'base.html.twig' %}
{% block body %}
    <h1>{{ 'title.element_details'|trans({'%id%': element.id|default('')}) }}</h1>
    {% if element is defined and element|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ element.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ element.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ element.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  element.title }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  element.category.title }}</dd>
        </dl>

        {% if pagination is defined and pagination.items|length %}
            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'comment.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.email'|trans, 'comment.email') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.nick'|trans, 'comment.nick') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'label.content'|trans, 'comment.content') }}</th>
                    <th>{{ 'label.delete'|trans }}</th>
                </tr>
                </thead>
                <tbody>

                {% for comment in pagination.items %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td>{{ comment.email }}</td>
                        <td>{{ comment.nick }}</td>
                        <td>{{ comment.content }}</td>

                        <td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ url('comment_delete', {id: comment.id}) }}" title="{{ 'action.delete'|trans }}" onclick="return confirm('{{ 'message.confirm_delete'|trans }}');">
                                    {{ 'action.delete'|trans }}
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>
                {{ 'message.record_not_found'|trans }}
            </p>
        {% endif %}

            <a href="{{ url('element_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('element_edit', {id: element.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            <a href="{{ url('element_delete', {id: element.id}) }}" title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
            <a href="{{ url('element_create') }}" title="{{ 'action.create'|trans }}">{{ 'action.create'|trans }}</a>
            {% endif %}

            <a href="{{ url('comment_create', {id: element.id}) }}" title="{{ 'action.add_comment'|trans }}">
            {{ 'action.add_comment'|trans }}
             </a>

    {% else %}
        <p>{{ 'message.element_not_found'|trans }}</p>
    {% endif %}
{% endblock %}
